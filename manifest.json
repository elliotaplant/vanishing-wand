{
  "manifest_version": 2,
  "name": "Dissapearing Wand",
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
    "default_icon": "wand.png"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
